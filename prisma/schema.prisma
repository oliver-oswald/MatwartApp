generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Categories {
  unterkunft
  kochen
  schlafen
  beleuchtung
  sonstiges
}

enum BookingStatus {
  PENDING
  APPROVED
  ACTIVE
  COMPLETED
  CANCELLED
}

model Item {
  id              String     @id @default(uuid())
  name            String
  description     String
  pricePerDay     Float
  replacementCost Float
  category        Categories
  imageUrl        String
  totalStock      Int
  availableStock  Int

  cartItems     BookingItem[]
  brokenRecords BrokenItemRecord[]
}

model Booking {
  id              String        @id @default(uuid())
  userName        String
  startDate       DateTime
  endDate         DateTime
  status          BookingStatus
  totalRentalCost Float
  finalBillAmount Float?
  adminNotes      String?
  createdAt       DateTime      @default(now())

  items       BookingItem[]
  brokenItems BrokenItemRecord[]
}

model BookingItem {
  id        String  @id @default(uuid())
  booking   Booking @relation(fields: [bookingId], references: [id])
  bookingId String
  item      Item    @relation(fields: [itemId], references: [id])
  itemId    String

  quantity        Int
  pricePerDay     Float
  replacementCost Float
}

model BrokenItemRecord {
  id        String  @id @default(uuid())
  booking   Booking @relation(fields: [bookingId], references: [id])
  bookingId String
  item      Item    @relation(fields: [itemId], references: [id])
  itemId    String

  name  String
  count Int
  cost  Float
}
