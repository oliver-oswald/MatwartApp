generator client {
  provider            = "prisma-client"
  output              = "./generated/prisma"
  importFileExtension = "ts"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum Categories {
  unterkunft
  kochen
  schlafen
  beleuchtung
  sonstiges
}

enum BookingStatus {
  WARTEN
  AKZEPTIERT
  AKTIV
  FERTIG
  ABGELEHNT
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)

  bookings Booking[]

  accounts Account[]
  sessions Session[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Item {
  id              String     @id @default(uuid())
  name            String
  description     String
  pricePerDay     Float
  replacementCost Float
  category        Categories
  imageUrl        String
  totalStock      Int
  availableStock  Int

  cartItems     BookingItem[]
  brokenRecords BrokenItemRecord[]
}

model Booking {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  startDate       DateTime
  endDate         DateTime
  status          BookingStatus
  totalRentalCost Float
  finalBillAmount Float?
  adminNotes      String?
  createdAt       DateTime      @default(now())

  items       BookingItem[]
  brokenItems BrokenItemRecord[]
}

model BookingItem {
  id        String  @id @default(uuid())
  booking   Booking @relation(fields: [bookingId], references: [id])
  bookingId String
  item      Item    @relation(fields: [itemId], references: [id])
  itemId    String

  quantity         Int
  originalQuantity Int?
  pricePerDay      Float
  replacementCost  Float
  damageReports    DamageReport[]
}

model DamageReport {
  id            String      @id @default(uuid())
  bookingItemId String
  bookingItem   BookingItem @relation(fields: [bookingItemId], references: [id])

  description String
  imageUrl    String
  createdAt   DateTime @default(now())
}

model BrokenItemRecord {
  id        String  @id @default(uuid())
  booking   Booking @relation(fields: [bookingId], references: [id])
  bookingId String
  item      Item    @relation(fields: [itemId], references: [id])
  itemId    String

  name  String
  count Int
  cost  Float
}
